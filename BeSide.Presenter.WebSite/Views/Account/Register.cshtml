@model BeSide.Presenter.WebSite.Models.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "../Shared/_Layout.cshtml";
}

<section class="site-hero site-sm-hero overlay" data-stellar-background-ratio="0.5" style="background-image: url(../../Content/images/big_image_2.jpg);">
    <div class="container">
        <div class="row align-items-center justify-content-center site-hero-sm-inner">
            <div class="col-md-7 text-center">

                <div class="mb-5 element-animate">
                    <h1 class="mb-2">Регистрация</h1>
                    <p class="bcrumb">
                        @Html.RouteLink("Домой", new
                        {
                            controller = "Home",
                            action = "Index"
                        })
                        <span class="sep ion-android-arrow-dropright px-2"></span> <span class="current">Регистрация</span>
                    </p>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- END section -->

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="form-wrap">
                    <h2 class="mb-5">Зарегистрировать новый аккаунт</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.Email, "Email")
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.Password, "Пароль")
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, "Повторите пароль")
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.FirstName, "Имя")
                                @Html.PasswordFor(m => m.FirstName, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.LastName, "Фамилия")
                                @Html.PasswordFor(m => m.LastName, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.Patronymic, "Отчество")
                                @Html.PasswordFor(m => m.Patronymic, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.PhoneNumber, "Номер телефона")
                                @Html.PasswordFor(m => m.PhoneNumber, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-12 form-group">
                                <div class="custom-control custom-radio">
                                    @Html.RadioButtonFor(m => m.Role, "provider", new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.Role, "Провайдер", new { @class = "custom-control-label" })
                                </div>

                                <div class="custom-control custom-radio">
                                    @Html.RadioButtonFor(m => m.Role, "client", new { @class = "custom-control-input" })
                                    @Html.LabelFor(m => m.Role, "Клиент", new { @class = "custom-control-label" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Register" class="btn btn-primary px-5 py-2">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>