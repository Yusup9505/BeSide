@model BeSide.Common.Entities.Category

@{
    ViewBag.Title = "Добавление категории";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}
<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="form-wrap">
                    <h2 class="mb-4">Добавление категории</h2>
                    @using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.Name, "Название категории")
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control py-2" })
                                @*@Html.ValidationMessageFor(m => m.Name, "Такая категория уже существует", new { @class = "text-danger" })*@
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Добавить" class="btn btn-primary px-5 py-2">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

