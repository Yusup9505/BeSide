@using BeSide.Presenter.WebSite.Models
@model AddServiceViewModel

@{
    ViewBag.Title = "Добавление сервиса";
    Layout = "~/Views/Shared/AdminPanel.cshtml";
}

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="form-wrap">
                    <h2 class="mb-4">Добавление сервиса</h2>
                    @using (Html.BeginForm("AddService", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken();

                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label class="mr-sm-2" for="inlineFormCustomSelect">Категория</label>
                                @Html.DropDownList("CategoryId", ViewBag.Categoryes as SelectList,
                                    new {@class= "custom-select mr-sm-2", id = "searchSelect" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 form-group">
                                @Html.LabelFor(m => m.ServiceName, "Название сервиса")
                                @Html.TextBoxFor(m => m.ServiceName, new { @class = "form-control py-2" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Добавить" class="btn btn-primary px-5 py-2 float-left">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
