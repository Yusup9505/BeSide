@using BeSide.Common.Entities
@using BeSide.Presenter.WebSite.Models.Category
@using BeSide.Presenter.WebSite.Models.Service
@model BeSide.Presenter.WebSite.Models.User.ProviderViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="site-section">
    <div class="container col-md-10 form-wrap justify-content-center">

        <div class="row border-bottom">
            <div class="col-md-7">
                @if (Model.CompanyName == null)
                {
                <h3>@Model.LastName @Model.FirstName @Model.Patronymic</h3>

                }
                else
                {
                    <h3>@Model.CompanyName (@Model.LastName @Model.FirstName)</h3>
                }
            </div>
        </div>

        <div class="row mt-2">
            <div class="row container ml-1">
                <p>@Model.Discription</p>
            </div>
            
            <div class="row">
                    @if (Model.FileType == FileType.Avatar)
                    {
                        <figure>
                            <img src="~/Account/GetImage?id=@Model.Id"
                                 alt="avatar" class="img-fluid ml-4" width="150" height="150" />
                        </figure>
                    }
                    else
                    {
                        <img src="@Url.Content("~/img/no_avatar.png")" class="img-fluid ml-4" width="200" height="150" />
                    }
            </div>

