@model BeSide.Presenter.WebSite.Models.Feedback.FeedbackViewModel

@{
    ViewBag.Title = "AddFeedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="form-wrap">
            <h2 class="mb-4">Оставить отклик</h2>
            @using (Html.BeginForm("AddFeedback", "Order", FormMethod.Post))
            {
                @Html.AntiForgeryToken();

                <div class="row">
                    <div class="col-md-12 form-group">
                        @Html.LabelFor(m => m.Text, "Описание")
                        @Html.TextBoxFor(m => m.Text, new { @class = "form-control py-2", maxlength = 200, min = 5 })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })

                        @Html.LabelFor(m => m.Price, "Цена")
                        <input type="number" name="Price" maxlength="6" class="form-control py-2" step="0.01" />
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

                        <div class="row container">
                            @Html.Hidden("OrderId", Model.OrderId)
                            <input type="submit" value="Добавить отклик" class="btn btn-primary px-5 py-2 mt-2">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    window.onbeforeunload = confirmExit;
    function confirmExit() {
        return "You have attempted to leave this page.  If you have made any changes to the fields without clicking the Save button, your changes will be lost.  Are you sure you want to exit this page?";
    }
</script>